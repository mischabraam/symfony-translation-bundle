{% extends base_template %}



{% block breadcrumb %}
    <div class="hidden-xs">
        <ol class="nav navbar-top-links breadcrumb">
            <li>
                <a href="/admin/dashboard">
                    <i class="fa fa-home"></i>
                </a>
            </li>
            <li class="active"><span>!!! Translations list !!!</span></li>
        </ol>
    </div>
{% endblock %}



{%- block actions -%}
    {% for item in admin.getActionButtons("", object|default(null)) %}
        {% if item.template is defined %}
            {% include item.template %}
        {% endif %}
    {% endfor %}
{%- endblock -%}



{% block title %}
    - !!! Translations list !!!
{% endblock %}






{% block list_table %}
    <div class="col-xs-12 col-md-12">


        {#{{ dump(catalogue) }}#}
        {#{{ dump(admin) }}#}


        <div class="box box-primary">
            <div class="box-body {% if catalogue and catalogue.domains|length > 0 %}table-responsive no-padding{% endif %}">
                {{ sonata_block_render_event('sonata.admin.list.table.top', { 'admin': admin }) }}

                {% block list_header %}{% endblock %}

                {% if catalogue and catalogue.domains|length > 0 %}
                    <table class="table table-bordered table-striped sonata-ba-list">
                        {% block table_header %}
                            <thead>
                            <tr class="sonata-ba-list-field-header">
                                <th class="sonata-ba-list-field-header-text">
                                    {% trans %}Domain{% endtrans %}
                                </th>
                                <th class="sonata-ba-list-field-header-text">
                                    {% trans %}Label{% endtrans %}
                                </th>
                            </tr>
                            </thead>
                        {% endblock %}

                        {% block table_body %}
                            <tbody>
                            {% for domain in catalogue.domains %}
                                {% for translation in domain.all %}
                                    <tr>
                                        <td class="sonata-ba-list-field sonata-ba-list-field-text">
                                            <a class="sonata-link-identifier" href="{{ admin.generateUrl('edit', { domain: translation.domain, id: translation.id }) }}">
                                                {{ translation.domain }}
                                            </a>
                                        </td>
                                        <td class="sonata-ba-list-field sonata-ba-list-field-text">
                                                <span>
                                                    {{ translation.id }}
                                                </span>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endfor %}
                            </tbody>
                        {% endblock %}

                        {% block table_footer %}
                        {% endblock %}
                    </table>
                {% else %}
                    {% block no_result_content %}
                        <div class="info-box">
                            <span class="info-box-icon bg-aqua"><i class="fa fa-arrow-circle-right" aria-hidden="true"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">{{ 'no_result'|trans({}, 'SonataAdminBundle') }}</span>
                                <div class="progress">
                                    <div class="progress-bar" style="width: 0%"></div>
                                </div>
                                <span class="progress-description">
                                </span>
                            </div>
                        </div>
                    {% endblock %}
                {% endif %}

                {{ sonata_block_render_event('sonata.admin.list.table.bottom', { 'admin': admin }) }}
            </div>


            {% block list_footer %}
                {% if catalogue and catalogue.domains|length > 0 %}
                    <div class="box-footer">


                        {{ admin.getMaxPerPage }}
                        {{ admin.getMaxPageLinks }}


                        {# page count dropdown #}
                        <div class="pull-right">

                            {% block pager_results %}
                                pager_results
                                {#{% include admin.getTemplate('pager_results') %}#}
                            {% endblock %}
                        </div>

                        {# pagination #}
                        {% block pager_links %}
                            pager_links
                            {#{% if admin.datagrid.pager.haveToPaginate() %}#}
                                {#<hr/>#}
                                {#{% include admin.getTemplate('pager_links') %}#}
                            {#{% endif %}#}
                        {% endblock %}
                    </div>
                {% endif %}
            {% endblock %}
        </div>


    </div>
{% endblock %}







{#{% block list_filters_actions %}#}
    {#filter actions#}
{#{% endblock %}#}

{#{% block list_filters %}#}
    {#filters#}
{#{% endblock %}#}
